<MudDialog>
    <DialogContent>
        <MudText Align="Align.Center">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudContainer Class="d-flex justify-center gap-4 mb-2">
            <MudButton OnClick="Close" Variant="Variant.Filled">
                @CloseButtonText
            </MudButton>
        </MudContainer>
    </DialogActions>
</MudDialog>
